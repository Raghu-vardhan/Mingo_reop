<script>
  document.addEventListener("DOMContentLoaded", function () {
    const slider = document.querySelector(".slider");
    const indicators = document.querySelectorAll(".indicator");
    const slides = document.querySelectorAll(".box-main");

    function updateIndicators() {
      const scrollLeft = slider.scrollLeft;
      const blockWidth = slides[0].offsetWidth + 15; // Width of a slide + gap
      const activeIndex = Math.round(scrollLeft / blockWidth);

      indicators.forEach((indicator, i) => {
        indicator.classList.toggle("active", i === activeIndex);
      });
    }

    // Listen for scroll events
    slider.addEventListener("scroll", updateIndicators);

    // Add click functionality for indicators
    indicators.forEach((indicator, index) => {
      indicator.addEventListener("click", () => {
        slider.scrollTo({
          left: index * (slides[0].offsetWidth + 15),
          behavior: "smooth"
        });
      });
    });
  });
  /* start */
  /* end */
</script>


<script>
  /* start */

document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('[data-section-type="testimonials"]').forEach(section => {
    const slider = section.querySelector('.testimonial-slider-container');
    const dots = section.querySelectorAll('.indicator');

    dots.forEach(dot => {
      dot.addEventListener('click', function() {
        const index = this.getAttribute('data-index');
        const slide = slider.querySelector('.testimonial-card');
        
        if (slide) {
          const slideWidth = slide.offsetWidth;
          
          // Move only the slider inside THIS specific section
          slider.scrollTo({
            left: slideWidth * index,
            behavior: 'smooth'
          });

          // Update Active Class only for dots inside THIS specific section
          dots.forEach(d => d.classList.remove('active'));
          this.classList.add('active');
        }
      });
    });
  });
});
/* end */

</script>


