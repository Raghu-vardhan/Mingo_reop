      "id": "last_img",
      "label": "select banner"
    },
      {
      "type": "text",
      "id":"last_heading",
      "label":"heading"
    },
    {
      "type":"richtext",
       "id":"last_desc",
      "label":"descripition"
    },
    {
       "type":"text",
       "id":"last_comment",
      "label":"insta"
    },
  
    {
       "type":"url",
       "id":"last_url",
      "label":"instragam_id"
    },
    {
       "type":"image_picker",
       "id":"inst_logo",
      "label":"insta logo"
    }
  ],
  
  "presets": [
    {
      "name": "last-banner",
      "category": "Collections",
    }
  ]
}
