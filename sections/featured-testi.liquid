
<style>
  .heading-testi {
  text-align: center;
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
      color: #8fa285
}
.start-testimonials {
  display: flex;
  overflow-x: auto; /* Allow horizontal scroll for small screens */
  gap: 20px;
}
.testimonial-section {
  padding:4rem 0;
}
  .testimonial-section h2{
    font-size: 32px;
    font-weight: 600;
    margin-bottom: 2rem;
    color: #80079E;
  }
.testimonial-block {
  min-width: 300px; /* Ensures proper spacing for the testimonial blocks */
  padding: 10px;
  border: 1px solid #000;
  border-radius: 8px;
  transition: transform 0.3s ease;
  text-align: center;
}

.testimonial-block:hover {
  transform: scale(1.05);
}
.start-testimonials::-webkit-scrollbar {
  display: none; /* For Chrome, Safari, and Opera */
}
.blockquote{
  font-size:16px;
  font-weight:400;
  line-height:23px;
  color:#000;
}
.author-info {
  margin-top: 10px;
}
.heading {
  font-family: 'Roboto', sans-serif;
    font-size: 32px;
    font-weight: 700;
    color: #226DFF;
    text-align: center;
    line-height: 28.13px;
  margin-bottom:3rem;
}
.author-image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.author-name {
  font-size: 16px;
  font-weight: bold;
  margin: 5px 0;
}

.author-role {
  font-size: 14px;
  color: #888;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .testimonial-block {
    min-width: 100%;
  }
  .testimonial-section{
    padding:0px;
  }
}

</style>


{% schema %}
  {
    "name": "Testimonial Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "TESTIMONIALS"
      }
    ],
    "blocks": [
      {
        "type": "testimonial",
        "name": "Testimonial",
        "settings": [
          {
            "type": "textarea",
            "id": "testimonial_text",
            "label": "Testimonial Text",
            "default": "“Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod te veniam, quis nostrud.”"
          },
          {
            "type": "image_picker",
            "id": "author_image",
            "label": "Author Image"
          },
          {
            "type": "text",
            "id": "author_name",
            "label": "Author Name",
            "default": "Susan Gibson"
          },
          {
            "type": "text",
            "id": "author_role",
            "label": "Author Role",
            "default": "Fashion Blogger"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Testimonial Section",
        "category": "Custom",
        "settings": {
          "heading": "TESTIMONIALS"
        },
        "blocks": [
          {
            "type": "testimonial",
            "settings": {
              "testimonial_text": "“Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod te veniam, quis nostrud.”",
              "author_name": "Susan Gibson",
              "author_role": "Fashion Blogger"
            }
          }
        ]
      }
    ]
  }
{% endschema %}

<div class="testimonial-section page-width">
  <h2 class=" ">{{ section.settings.heading }}</h2>
  <div class="start-testimonials page-size">
    {% for block in section.blocks %}
      <div class="testimonial-block">
        <div class="blockquote">{{ block.settings.testimonial_text }}</div>
        <div class="author-info">
          {% if block.settings.author_image != blank %}
            <img src="{{ block.settings.author_image | img_url: '50x50' }}" alt="{{ block.settings.author_name }}" class="author-image">
          {% endif %}
          <p class="author-name">{{ block.settings.author_name }}<span>,</span></p>
          <p class="author-role">{{ block.settings.author_role }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>