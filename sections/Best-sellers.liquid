<div class="product-collection">
    {% if section.settings.collection %}
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
      
      <div class="products-grid" id="auto-scroll">
        {% for product in collections[section.settings.collection].products %}
          <div class="product-item">
            <a href="{{ product.url }}">
              <img src="{{ product | img_url: 'medium' }}" alt="{{ product.title }}" width="300" height="300">
              <h3>{{ product.title }}</h3>
              <p>{{ product.price | money }}</p>
            </a>
            <button class="explore-btn">Shop Now</button>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>No collection selected.</p>
    {% endif %}
</div>

<style>
  .products-grid{
    display:flex;
    max-width:1200px;
    margin: 0 auto;
  }
</style>



{% schema %}
{
    "name": "Best-sellers",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Section Heading",
            "default": "Featured Products"
        },
        {
            "type": "collection",
            "id": "collection",
            "label": "Select Collection"
        }
    ],
    "presets": [
        {
            "name": "Best-sellers",
            "category": "Collections"
        }
    ]
}
{% endschema %}
