{% schema %}
  {
    "name": "Single Image Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Banner Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_banner_image",
        "label": "Mobile Banner Image"
      },
      {
        "type": "textarea",
        "id": "svg_icon",
        "label": "SVG Icon"
      }
    ],
    "presets": [
      {
        "name": "Single Banner",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

<div class="single-image-banner">
  <div class="banner-image">
    <picture>
      <!-- Mobile Image -->
      <source media="(max-width: 768px)" srcset="{{ section.settings.mobile_banner_image | img_url: 'master' }}" />
      <!-- Desktop Image -->
      <img src="{{ section.settings.banner_image | img_url: 'master' }}" alt="Banner Image" />
    </picture>

    {% if section.settings.svg_icon %}
      <div class="svg-icon">
        {{ section.settings.svg_icon }}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .single-image-banner {
    position: relative;
    text-align: center;
  }

  .single-image-banner .banner-image {
    position: relative;
    width: 100%;
    height: auto;
  }

  .single-image-banner img {
    width: 100%;
    height: auto;
    display: block;
  }

  .single-image-banner .svg-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .single-image-banner .svg-icon svg {
    width: 100%;
    height: 100%;
  }

  @media (max-width: 768px) {
    .single-image-banner {
    }
  }
</style>
