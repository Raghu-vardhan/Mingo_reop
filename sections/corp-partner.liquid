      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "corp-partner-desc",
      "label": "Description",
    },
    {
      "type": "image_picker",
      "id":"corp-part_img",
      "label": "select image"
    }
  ],
  "presets": [
    {
      "name": "corp-partner",
      "category": "corp-partner"
    }
  ]
}
{% endschema %}
