<div class="corp-team page-width">
  
  <div class="corp-team-sub">
        <div class="corp-team_up">
            <h2>{{ section.settings.corp-team_heading }}</h2>
            <p>{{ section.settings.corp-team_desc }}</p>
        </div>

       <div class="corp-team_down">
          {% for block in section.blocks %}
      {% if block.settings.corp-team-img %}
           <ul>
             <li class="corp-team_li">
               <div class="corp_img">
                    <img src="{{ block.settings.corp-team-img | img_url: 'original' }}" alt="corp-team Image" width="300" height="300" >
               </div>
               <h3>{{ block.settings.corp-team_title }}</h3>
                <p>{{ block.settings.corp-team_desc-li }}</p>
             </li>
             <li  class="corp-team_li">
                 <div class="corp_img">
                    <img src="{{ block.settings.corp-team1-img | img_url: 'original' }}" alt="corp-team Image" width="300" height="300" >
               </div>
               <h3>{{ block.settings.corp-team_title1 }}</h3>
                <p>{{ block.settings.corp-team_desc-li1 }}</p>
             </li>
             <li  class="corp-team_li">
               <div class="corp_img">
                    <img src="{{ block.settings.corp-team2-img | img_url: 'original' }}" alt="corp-team Image" width="300" height="300" >
               </div>
               <h3>{{ block.settings.corp-team_title2 }}</h3>
                <p>{{ block.settings.corp-team_desc-li2 }}</p>
             </li>
             <li  class="corp-team_li">
                <div class="corp_img">
                    <img src="{{ block.settings.corp-team3-img | img_url: 'original' }}" alt="corp-team Image" width="300" height="300" >
               </div>
               <h3>{{ block.settings.corp-team_title3 }}</h3>
                <p>{{ block.settings.corp-team_desc-li3 }}</p>
             </li>
           </ul>
          {% endif %}
        {% endfor %}
        </div>
  </div>
</div>
<style>
  .corp-team-sub{
    display: flex;
    flex-direction:column;
    width:100%;
    align-items: center;
    margin-top: 60px;
    margin-bottom:2rem;
  }
  .corp-team_up{
    display:flex;
    justify-content:space-between;
    width:100%;
    margin-bottom: 4rem;
  }
  .corp-team_down{
    display:flex;
    flex-direction:column;
    gap:24px;
    margin-top:32px;
  }
  .corp-team_up h2{
    font-size:32px;
    font-weight: 600;
    color: #80079e;
    text-align:center;
    line-height:23px;
  }
  .corp_img{
    width:80px;
    margin-bottom: 1.6rem;
  }
  .corp-team_up p{
    max-width: 600px;
    text-align: center;
    line-height: 23px;
    font-weight:400;
    color:#000000;
  }
  .corp-team_down ul{
    display:flex;
   list-style:none;
    gap:30px;
  }
 .corp_img img{
      height:100%;
      max-width:100%;
  }
  .corp-team_li  p{
    max-width: 256px;
    color: #000000;
    font-weight: 400;
    line-height: 27px;
}
  .corp-team_li h3{
      font-weight:700;
      font-size:22px;
      line-height:28px;
      text-transform: capitalize;
      margin-bottom:10px;
  }

  @media (max-width:920px){
    .corp-team_down ul{
      flex-direction:column;
    }
  }
</style>
