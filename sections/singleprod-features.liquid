<div class="Sprod-benefits page-width">
  <h2>{{ section.settings.Sprod-benfits_heading }}</h2>
  <div class="benefits-sub">
    {% for block in section.blocks %}
    {% if block.settings.Sprod_img %}
    <ul class="Sprod-benefits_ul">
      <li>
        <div class="Sprod-img">
            <img src="{{ block.settings.Sprod_img | img_url: 'original' }}" alt="Sprod-benfits Image">
        </div>
        <p>{{ block.settings.Sprod_desc}}</p>
      </li>
      <li>
        <div class="Sprod-img">
            <img src="{{ block.settings.Sprod_img1 | img_url: 'original' }}" alt="Sprod-benfits Image">
        </div>
        <p>{{ block.settings.Sprod_desc1}}</p>
      </li>
      <li>
        <div class="Sprod-img">
            <img src="{{ block.settings.Sprod_img2 | img_url: 'original' }}" alt="Sprod-benfits Image">
        </div>
        <p>{{ block.settings.Sprod_desc2}}</p>
      </li>
    </ul>
    {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .Sprod-benefits_ul {
    display: flex;
    gap: 30px;
    list-style: none;
    padding: 0px;
    flex-wrap: wrap; /* Allow items to wrap on smaller screens */
  }
  
  .Sprod-benefits h2 {
    font-family: 'Roboto', sans-serif;
    font-weight: 700;
    color: #226DFF;
    text-align: center; /* Center-align heading for better readability on smaller screens */
  }

  .Sprod-benefits_ul li {
    text-align: center;
    flex: 1 1 30%; /* Make each item take up about 30% of the container, and allow them to shrink or grow */
    max-width: 300px; /* Set a maximum width for each item */
    margin: 10px auto; /* Add margin for spacing between items */
  }

  .Sprod-img img {
    max-width: 100px; /* Allow image to resize while keeping the same aspect ratio */
    height: auto;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .Sprod-benefits_ul {
      flex-direction: column; /* Stack items vertically on smaller screens */
      align-items: center; /* Center-align each block */
    }
    .Sprod-img img {
      max-width: 80px; /* Reduce image size on smaller screens */
    }
  }

  @media (max-width: 480px) {
    .Sprod-benefits_ul li {
      flex: 1 1 100%; /* Make each item take up the full width on very small screens */
      max-width: 100%;
    }
    .Sprod-img img {
      max-width: 60px; /* Further reduce image size */
    }
  }
</style>
