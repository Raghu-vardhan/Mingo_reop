{{ 'join-team.css' | asset_url | stylesheet_tag }}

<div class="page-width jointeams">
  <div class="Jointeam-header">
    <h2>{{ section.settings.Join-team_heading }}</h2>
    <p>{{ section.settings.Join-team_desc }}</p>
  </div>

  <ul class="team-flex">
    {% for block in section.blocks %}
      {% if block.settings.join-team_head %}
        <li>
          <div class="accordion">
            <div class="team-li">
              <div class="left-info">
                <p>{{ block.settings.join-team_head }}</p>
                <h3>{{ block.settings.join-team_title }}</h3>
                <div class="left_png">
                  <span class="left_icons">
                    <img src="{{ block.settings.join-team_icon1 | img_url: 'original' }}" alt="Icon 1" width="85" height="85"/>
                    <p>{{ block.settings.join-team_logo_desc1 }}</p>
                  </span>
  
                  <span class="left_icons">
                    <img src="{{ block.settings.join-team_icon2 | img_url: 'original' }}" alt="Icon 2" width="85" height="85"/>
                    <p>{{ block.settings.join-team_logo_desc2 }}</p>
                  </span>
                </div>
              </div>
  
              <div class="right-info">
                <a >
                  <button>View Details </button>
                </a>
              </div>
            </div>
          </div>

          <!-- Contact Section -->
          <div class="panel">
            <section class="contact-main">
              <div class="contact"> 
                <div class="role-1">
                  <div class="title_career">
                    <h4>Job Title:</h4>
                    <p>UI/UX Designer</p>
                  </div>
                  <div class="title_career">
                    <h4>Location:</h4>
                    <p>[City,State] or Remote</p>
                  </div>
                </div>
        
                <div class="role-2">
                  <h3>Role Overview:</h3>
                  <p>We’re seeking a passionate and skilled UI/UX Designer to create intuitive and engaging user interfaces for our digital platforms. You’ll work closely with our product managers, developers, and other stakeholders to design seamless user experiences that meet our users’ needs and align with our brand’s vision.</p>
                </div>
        
                <div class="role-3">
                  <h3>Key Responsibilities:</h3>
                  <ul class="roles">
                    <li>Design and implement user interfaces that are both functional and aesthetically pleasing.</li>
                    <li>Collaborate with cross-functional teams to define and execute the design process.</li>
                    <li>Conduct user research to guide design decisions and iterate on designs based on user feedback.</li>
                    <li>Create wireframes, prototypes, and high-fidelity designs for web and mobile applications.</li>
                  </ul>
                </div>
        
                <div class="role-4">
                  <h3>Qualifications:</h3>
                  <ul class="roles">
                    <li>Proven experience as a UI/UX Designer, with a strong portfolio of design projects.</li>
                    <li>Proficiency in design tools such as Sketch, Figma, Adobe XD, etc.</li>
                    <li>Strong understanding of user-centered design principles.</li>
                  </ul>
                </div>
              </div>
        
              <div class="">
                <div class="contact-form-container">
                  <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="contact-form" enctype="multipart/form-data">
                    <input type="hidden" name="form_type" value="contact" />
                    <input type="hidden" name="utf8" value="✓" />
        
                    <div class="contact-1">
                      <!-- Full Name -->
                      <div class="form-group">
                        <label for="ContactFormName">Full Name <span id="contact-star">*</span></label>
                        <input type="text" id="ContactFormName" name="contact[name]" required>
                      </div>
                      <!-- Phone Number -->
                      <div class="form-group">
                        <label for="ContactFormPhone">Phone Number <span id="contact-star">*</span></label>
                        <input type="tel" id="ContactFormPhone" name="contact[phone]" required>
                      </div>
                    </div>
        
                    <!-- Email ID -->
                    <div class="form-group">
                      <label for="ContactFormEmail">Email ID <span id="contact-star">*</span></label>
                      <input type="email" id="ContactFormEmail" name="contact[email]" required>
                    </div>
        
                    <div class="contact-1">
                      <!-- Upload Resume -->
                      <div class="form-group">
                        <label for="ContactFormResume">Upload CV/Resume <span id="contact-star">*</span></label>
                        <input type="file" id="ContactFormResume" name="contact[resume]" accept=".pdf,.doc,.docx" required>
                      </div>
        
                      <!-- Role Selection Dropdown -->
                      <div class="form-group">
                        <label for="ContactFormRole">Role <span id="contact-star">*</span></label>
                        <select id="ContactFormRole" name="contact[role]" required>
                          <option value="" disabled selected>Select a role</option>
                          <option value="Software Developer">Software Developer</option>
                          <option value="UI/UX Developer">UI/UX Developer</option>
                        </select>
                      </div>
                    </div>
        
                    <!-- Message -->
                     <label for="ContactFormmessage">Message <span id="contact-star">*</span></label>
                    <div class="form-group">
                      <textarea placeholder="Cover Letter" id="ContactFormMessage" name="contact[body]" rows="10" required></textarea>
                    </div>
        
                    <!-- Submit Button -->
                    <div class="form-group">
                      <button type="submit" class="btn">Submit</button>
                    </div>
                  </form>
        
                  <!-- Display confirmation message after submission -->
                  {% if form.posted_successfully? %}
                    <p class="success">
                      Thank you for contacting us! We will get back to you as soon as possible.
                    </p>
                  {% elsif form.errors %}
                    <p class="error">
                      There was an error with your submission. Please check the form and try again.
                    </p>
                  {% endif %}
                </div>
              </div>
            </section>
          </div>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>

<script>
  var acc = document.getElementsByClassName("accordion");
  for (var i = 0; i < acc.length; i++) {
    acc[i].addEventListener("click", function() {
      this.classList.toggle("active");
      var panel = this.nextElementSibling;
      if (panel.style.display === "block") {
        panel.style.display = "none";
      } else {
        panel.style.display = "block";
      }
    });
  }
</script>

