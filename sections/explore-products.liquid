<div class="explore-main">
  <div class="explore-flex page-width">
     <div class="main-heading">
          <h2>{{ section.settings.heading }}</h2>
  </div>
        <div class="explore-sub">
      {% for block in section.blocks %}
      {% if block.settings.block_product %}
          <div class="explore-product ">
          <a href="{{ block.settings.block_product_url }}">
            <img src="{{ block.settings.block_product | img_url: 'original' }}" alt="Product Image" width="300" height="300">
            <div class="explore-info">
               <div class="explore-content">
                  <h4 class="explore-prod-title">{{ block.settings.collection_title }}</h4>
                <p class="explore-prod-text">{{block.settings.explore_text}}</p>
               </div>
              <div>
                <button class="explore-btn">Shop Now</button>
              </div>
            </div>
           </a>
        </div>
    {% endif %}
    {% endfor %}
        </div>

  </div>
</div>

<style>
  .explore-product {
    width:50%;
  }
  .explore-main{
    font-family: 'Roboto', sans-serif;
    padding: 4rem 0;
}
  .explore-sub{
    display:flex;
    gap:20px;
    margin-top:24px;
  }
  .explore-flex {
    gap:1.5rem;
  }
  .explore-product a{
    text-decoration:none;
  }
  .main-heading{
    text-align:start;
  }
  .main-heading h2{
    font-size:32px;
    font-weight:500;
    color:#3260E4;
    display:block;
     font-family: 'Roboto', sans-serif;
  }
  .explore-prod-text{
    color:#000000;
    margin:0px;
    font-weight:400;
    font-size:16px;
     font-family: 'Roboto', sans-serif;
  }
  .explore-info {
    display: flex;
    justify-content:space-between;
    color:#0000;
  }
  .explore-prod-title{
    margin:0px;
    font-size:24px;
    font-weight:500;
     font-family: 'Roboto', sans-serif;
  }

  .explore-product img{
    width:100%;
  }
  .explore-btn {
    margin-top: 10px;
    padding: 14px 25px;
    border-radius: 50px;
    background: #3260E4;
    color: #fff;
    border: 0px;
    font-size: 20px;
    cursor:pointer;
  }

  @media only screen and (max-width: 600px){
    
  }
</style>

{% schema %}
{
    "name": "Explore Product",
    "settings": [

          {
            "type": "text",
            "id": "heading",
            "label": "Section Heading",
           
        }

    ],
    "blocks": [
        {
            "type": "product",
            "name": "Product Block",
            "settings": [
                {
                  "type": "url",
                  "id":"block_product_url",
                  "label": "seclect collection",
                  
                },
                {
                    "type": "image_picker",
                    "id": "block_product",
                    "label": "Select image"
                },
                 {
                  "type": "text",
                  "id":  "collection_title",
                   "label":"Title",
                },
                {
                  "type": "text",
                  "id":"explore_text",
                  "label":"description"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Explore Product",
            "category": "Collections"
        }
    ]
}
{% endschema %}
